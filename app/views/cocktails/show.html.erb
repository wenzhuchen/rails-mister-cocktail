<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>

      <% @cocktail.doses.each do |dose|%>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
      <br>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', cocktails_path %>
</div>

<div class='container'>
  <%= render 'doses/form' %>
</div>
